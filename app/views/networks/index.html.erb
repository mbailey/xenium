<table cellspacing="0">
	<caption>Networks</caption>
	<thead>
		<tr>
			<th class="name">Name</th>
			<th>Network address</th>
			<th>Netmask</th>
			<th># Used</th>
			<th># Remaining</th>
			<th></th>
			<th></th>
		</tr>
    </thead>

	<% for network in @networks %>
	<tbody>
		<tr class="<%= cycle('odd','even') %>">
			<td class="name"><%= link_to h(network.name), network_path(network) %></td>
			<td><%=h network.network_address %></td>
			<td><%=h network.netmask %></td>
			<td><%=link_to h(network.ips.count), network_ips_path(network) %></td>
			<td><%=h network.remaining_ips %></td>
			<td class="actions"><%= link_to image_tag('/images/Edit.png', :alt => "Edit", :title => "Edit"), edit_network_path(network) %></td>
			<td class="actions"><%= link_to image_tag('/images/destroy.png', :alt => "Destroy", :title => "Destroy"), network, :confirm => "Are you sure you want to delete network #{network.name}?", :method => :delete %></td>
		</tr>
    </tbody>
	<% end %>
	<tfoot>
		<tr>
			<td><%= link_to image_tag('/images/plusbutton.png', :alt => "New Network", :title => "New Network"), new_network_path %></td>
	<td colspan="7"></td>
		</tr>
	</tfoot>
</table>


